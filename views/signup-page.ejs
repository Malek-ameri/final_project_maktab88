<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style-register.css" />
    <title>signUp</title>
  </head>
  <body>
    <div class="container">
      <div class="form">
        <div class="btn">
          <button class="signUpBtn">SIGN UP</button>
        </div>
        <form class="signUp" >

          <div class="formGroup" >
            <input
            id="first-name"
              type="text"
              placeholder="Firstname"
              name="firstname"
              required
              autocomplete="off"
            />
          </div>
          <div id="fname-error" class="err"></div>

          
          <div class="formGroup">
            <input
              id="last-name"
              type="text"
              placeholder="Lastname"
              name="lastname"
              required
              autocomplete="off"
            />
          </div>
          <div id="lname-error" class="err"></div>


          <div class="formGroup">
            <input
              id="user-name"
              type="text"
              name="username"
              placeholder="User Name"
              required
              autocomplete="off"
            />
          </div>
          <div id="uname-error" class="err"></div>


          <div class="formGroup">
            <input
            id="password"
              type="password"
              placeholder="Password"
              required
              name="password"
              autocomplete="off"
            />
          </div>
          <div id="pass-error" class="err"></div>


          <div class="formGroup">
            <input
              id="email"
              type="email"
              name="email"
              placeholder="Email"
              autocomplete="off"
            />
          </div>
          <div id="email-error" class="err"></div>


          <div class="formGroup">
            <input
              id="phonenumber"
              type="text"
              name="phoneNumber"
              placeholder="Phonenumber"
              autocomplete="off"
              required
            />
          </div>
          <div id="phone-error" class="err"></div>


          <div class="checkBox">
            <div class="form-check mr-30">
              <input
              id="gender"
                class="form-check-input"
                type="radio"
                name="gender"
                value="male"
              />
              <label class="form-check-label text" for="flexRadioDefault1">
                Male
              </label>
            </div>

            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="gender"
                value="female"
              />
              <label class="form-check-label text" for="flexRadioDefault2">
                Female
              </label>
            </div>

          </div>


          <div class="formGroup">
            <button id="signup-but" type="button" class="btn2">REGISTER</button>
          </div>

          <div id="exists" class="err" style="margin-top: 10px; font-weight: 600;"></div>
        </form>
        <p style="font-weight: 600;font-size: 14px; text-align: center;">Have already account ?<a href="http://localhost:3000/login">Login here</a></p>
      </div>
    </div>
    <script src="/javascripts/validation.js"></script>
    <script src="/javascripts/signup.js"></script>
  </body>
</html>
